<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Line 1</th>
    <th>Line 2</th>
    <th>Post Code</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
  	<td><%= address.address_line1 %></td>
  	<td><%= address.address_line2 %></td>
  	<td><%= address.address_postcode %></td>
  	<td><%= link_to 'Show', address %> | <%= link_to 'Edit', edit_address_path(address) %> | <%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Address', new_address_path %>
