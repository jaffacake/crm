<h1>Listing properties</h1>

<table id="properties" class="display" data-source="<%= properties_url(format: "json") %>">
	<thead>
  <tr>
    	<th>Property Ref</th>
		<th>Property</th>
		<th>Price</th>
		<th>Occupied</th>
		<th>Date Available</th>
		<th>Beds</th>
		<th>Recp</th>
		<th>Furn</th>
		<th>Prt Furn</th>
		<th>DG</th>
		<th>CH</th>
		<th>B-Up</th>
		<th>B-Down</th>
		<th>Garage</th>
		<th>DW</th>
		<th>Tenants</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Destroy</th>
  </tr>
  </thead>
<tbody>
<% @properties.each do |property| %>
  <tr>
  	<td><%= property.reference %></td>
  	<td><%= property.reference %></td>
  	<td><%= property.price %></td>
  	<td><%= property.occupied %></td>
  	<td><%= property.available_date %></td>
  	<td><%= property.bedrooms %></td>
  	<td><%= property.reception_rooms %></td>
  	<td><%= property.furnished %></td>
  	<td><%= property.furnished %>!!!</td>
  	<td><%= property.double_glazed %></td>
  	<td><%= property.central_heating %></td>
  	<td><%= property.upstairs_bathroom %></td>
  	<td><%= property.downstairs_bathroom %></td>
  	<td><%= property.garage %></td>
  	<td><%= property.drive_way %></td>
  	<td> Button for Tenants</td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

