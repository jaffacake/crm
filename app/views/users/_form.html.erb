<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field"><%= f.label :username %><br />
  <%= f.text_field :username %></div>
	
  <div class="field"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="field"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  
  <h2>Address</h2>
	
	<%= f.fields_for :address do |builder|%>
		<%= render 'addresses/address_fields', f: builder %>
	<% end %>
	
  
  <% if current_user.id != @user.id %>
		<div class="select">
			<%= f.label(:admin, "Estate Agent Admin") %>
			<%= f.radio_button(:admin, "1") %>
			<%= f.label(:admin, "Estate Agent User") %>
			<%= f.radio_button(:admin, "0") %>
		</div>
	<% end %>
	
	<% if current_user.admin == 3 && current_user.id != @user.id %>
  		<div class="dropdown">
		  	<%= f.label :estate_agent_id %><br />
		  	<%= f.select(:estate_agent_id, EstateAgent.all.map {|p| [p.name,p.id]}, :prompt => "Select an Estate Agent") %>
	  	</div>
  	<% end %>
  	<br />
  	
  	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>
